
# Пример файла конфигурации для dela - системы управления сотрудниками
# Скопируйте этот файл в .env и заполните своими значениями

# ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ

# База данных PostgreSQL
# Формат: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://dela_user:your_secure_password@localhost:5432/dela_db

# Секретный ключ для сессий (минимум 32 символа)
SESSION_SECRET=your_very_secure_session_secret_key_min_32_chars_here

# НАСТРОЙКИ СЕРВЕРА

# Порт приложения
PORT=5000

# Режим работы (development или production)
NODE_ENV=production

# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ (опционально)

# CORS origins (если фронтенд на другом домене)
# CORS_ORIGIN=https://your-domain.com

# Уровень логирования
# LOG_LEVEL=info

# Пример заполненного файла:
# DATABASE_URL=postgresql://dela_user:SecurePass123@localhost:5432/dela_db
# SESSION_SECRET=my_super_secure_session_secret_key_32_chars_min
# PORT=5000
# NODE_ENV=production
